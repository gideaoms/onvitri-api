generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model City {
  id         String   @id @default(uuid()) @db.Uuid
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  name       String
  initials   String   @db.Char(2)

  stores Store[]

  @@map("cities")
}

model User {
  id              String   @id @default(uuid()) @db.Uuid
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt
  name            String
  email           String   @unique
  password        String?
  roles           String[]
  status          String
  following_count Int      @default(0)
  email_code      String?

  stores    Store[]
  following Follower[]

  @@map("users")
}

model Store {
  id              String   @id @default(uuid()) @db.Uuid
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt
  city_id         String   @db.Uuid
  owner_id        String   @db.Uuid
  fantasy_name    String
  street          String
  number          String
  neighborhood    String
  phone           Json
  zip_code        String
  status          String
  followers_count Int      @default(0)

  city      City       @relation(fields: [city_id], references: [id])
  owner     User       @relation(fields: [owner_id], references: [id])
  products  Product[]
  followers Follower[]

  @@map("stores")
}

model Product {
  id          String   @id @default(uuid()) @db.Uuid
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
  store_id    String   @db.Uuid
  title       String
  description String
  price       Int
  photos      Json
  status      String

  store Store @relation(fields: [store_id], references: [id])

  @@map("products")
}

model Follower {
  user_id    String   @db.Uuid
  store_id   String   @db.Uuid
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  store Store @relation(fields: [store_id], references: [id])
  user  User  @relation(fields: [user_id], references: [id])

  @@id(fields: [user_id, store_id])
  @@map("followers")
}
